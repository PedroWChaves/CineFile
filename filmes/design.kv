#:import d dialogs
#:import clc kivy.clock.Clock


MDNavigationLayout:

	ScreenManager:

	    MDScreen:

			MDBoxLayout:
				orientation: 'vertical'
				
				MDFloatLayout:
					size_hint: (1, 0.2)

					MDToolbar:
						size_hint: (1, 1)
						pos_hint: {"center_x": 0.5, "center_y": 0.5}
						title: "CineFile"
				        left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]
				        right_action_items: [["brightness-4", app.change_theme]]

					MDTextFieldRound:
						id: barra_pesquisa
						size_hint: (0.85, 0.4)
						pos_hint: {"center_x": 0.5, "center_y": 0.26}
						hint_text: "Pesquisar"
						hint_text_color: "grey"
						line_color: app.theme_cls.primary_color
						normal_color: app.theme_cls.bg_light
    					color_active: app.theme_cls.bg_light

    				MDIconButton:
    					id: lupa
    					icon: 'magnify'
    					theme_text_color: "Custom"
				        text_color: "grey" if barra_pesquisa.text == "" else "black"
						pos_hint: {"center_x": 0.9, "center_y": 0.26}
						on_release: app.menu.open()

				MDTabs:
					tab_bar_height: "25dp"

					Tab:
						id: tab_filmes
						title: "Filmes"
					
						ScrollView:
							id: scroll_filmes
							#effect_cls: "ScrollEffect", "DampedScrollEffect", "OpacityScrollEffect"

							MovieList:
								cols: 1
								id: lista_filmes
								

						MDFloatingActionButtonSpeedDial:
							id: speed_dial
							data: app.speed_buttons
							root_button_anim: True
							label_text_color: "white"
							bg_color_root_button: app.theme_cls.primary_dark
							callback: app.speed_dial_callback
							on_open: clc.schedule_once(app.speed_dial_selection_mode, 0.55)
							on_close: app.speed_dial_cancel_auto_close()


					Tab:
						title: "Listas"

						ScrollView:
							MDList:
								id: lista_listas




					Tab:
						title: "Sorteador"

						MDFloatLayout:
							MDCardElev:
								orientation: "vertical"
								size_hint: (0.9, 0.25)
								pos_hint: {'center_x': 0.5, 'center_y': 0.8}
								elevation: 7
								radius: [dp(20), dp(20), dp(20), dp(20)]

								MDLabel:
									text: "Sorteado:"
									theme_text_color: "Secondary"
									size_hint: (1, 0.3)
									pos_hint: {'top': 1, 'center_x': 0.55}
									font_size: "14dp"

								MDSeparator:
									height: "1dp"
									pos_hint: {'top': 1}
									size_hint_y: None

								TwoLineListItem: # MovieListItem
									id: card_selected
									size_hint: (1, 1)
									pos_hint: {'center_y': 0.5}
									text: "1994 - Pulp Fiction"
									secondary_text: "crime/drama"
									on_release: app.open_dialog(d.movie_detail_dialog, card_selected)

								MDFlatButton:
									text: "EDITAR"
									size_hint: (1, 0.3)
									pos_hint: {'bottom': 1}
									on_release: app.open_dialog(d.edit_movie_dialog, card_selected)

							MDCardElev:
								size_hint: (0.8, 0.1)
								pos_hint: {'center_x': 0.5, 'center_y': 0.55}
								elevation: 7
								radius: [dp(20), dp(20), dp(20), dp(20)]

							MDCardElev:
								size_hint: (0.8, 0.1)
								pos_hint: {'center_x': 0.5, 'center_y': 0.4}
								elevation: 7
								radius: [dp(20), dp(20), dp(20), dp(20)]

							MDCardElev:
								size_hint: (0.8, 0.1)
								pos_hint: {'center_x': 0.5, 'center_y': 0.25}
								elevation: 7
								radius: [dp(20), dp(20), dp(20), dp(20)]


							MDRoundFlatButton:
								text: "Prioridades"
								font_size: "18dp"
								theme_text_color: 'Primary'
			                    md_bg_color: app.theme_cls.bg_light
			                    line_color: app.theme_cls.bg_light
			                    text_color: app.theme_cls.secondary_text_color
								size_hint: (0.8, 0.1)
								pos_hint: {'center_x': 0.5, 'center_y': 0.55}
								on_release: app.open_dialog(d.prioridade_dialog)

							MDRoundFlatButton:
								text: "Categorias"
								font_size: "18dp"
								theme_text_color: 'Primary'
			                    md_bg_color: app.theme_cls.bg_light
			                    line_color: app.theme_cls.bg_light
			                    text_color: app.theme_cls.secondary_text_color
								size_hint: (0.8, 0.1)
								pos_hint: {'center_x': 0.5, 'center_y': 0.4}
								on_release: app.open_dialog(d.categoria_dialog)

							MDRoundFlatButton:
								text: "Lançamento"
								font_size: "18dp"
								theme_text_color: 'Primary'
			                    line_color: app.theme_cls.bg_light
			                    md_bg_color: app.theme_cls.bg_light
			                    text_color: app.theme_cls.secondary_text_color
								size_hint: (0.8, 0.1)
								pos_hint: {'center_x': 0.5, 'center_y': 0.25}
								on_release: app.open_dialog(d.lancamento_dialog)


							MDFillRoundFlatButton:
								text: "SORTEAR!"
								font_size: "18dp"
								size_hint: (0.6, 0.1)
								pos_hint: {"center_x": 0.5, "center_y": 0.1}
								on_release: app.select_random_movie()


    MDNavigationDrawer:
    	id: nav_drawer
	    orientation: "vertical"
	    padding: "0dp"
	    spacing: "0dp"

	    MDCardElev:
	    	elevation: 10
	    	size_hint: (1, 0.5)
	    	md_bg_color: app.theme_cls.primary_color
	    	radius: [dp(2), dp(2), dp(2), dp(2)]
	    	orientation: "vertical"
	    	padding: "15dp"

	        MDIconButton:
	            id: avatar
	            user_font_size: "100dp"
	            icon: "account-circle"
	            theme_text_color: "Custom"
	            text_color: app.theme_cls.bg_dark

		    MDLabel:
		        text: "Meu Perfil"
		        font_style: "Button"
		        size_hint_y: None
		        font_size: "20dp"
		        height: self.texture_size[1]
	            theme_text_color: "Custom"
	            text_color: app.theme_cls.opposite_text_color

		    MDLabel:
		        text: "nao sei oq colocar aqui"
		        font_style: "Caption"
		        size_hint_y: None
		        font_size: "14dp"
		        height: self.texture_size[1]
	            theme_text_color: "Custom"
	            text_color: app.theme_cls.opposite_text_color

	    ScrollView:
	    	MDList:
			    padding: 10

			    OneLineIconListItem:
			    	text: "Meus Dados"
			    	
			    	IconLeftWidgetWithoutTouch:
			    		icon: "card-account-details"

			    OneLineIconListItem:
			    	text: "Minhas Listas"

			    	IconLeftWidgetWithoutTouch:
			    		icon: "format-list-bulleted"

			    OneLineIconListItem:
			    	text: "Cor e Tema"

			    	IconLeftWidgetWithoutTouch:
			    		icon: "palette"

			    OneLineIconListItem:
			    	text: "Easter Eggs"

			    	IconLeftWidgetWithoutTouch:
			    		icon: 'penguin'

			    OneLineIconListItem:
			    	text: "Configurações"
			    	
			    	IconLeftWidgetWithoutTouch:
			    		icon: "cog"

			    OneLineIconListItem:
			    	text: "Ajuda"

			    	IconLeftWidgetWithoutTouch:
			    		icon: "help-circle"

			    OneLineIconListItem:
			    	text: "Sair"

			    	IconLeftWidgetWithoutTouch:
			    		icon: 'exit-to-app'


# DIALOGS
<CancelButton>:
	text: "CANCELAR"
    font_size: "12dp"
    theme_text_color: "Custom"
    text_color: app.theme_cls.primary_color
    on_release: app.close_dialog()

<OkayButton>:
	text: "OK"
    font_size: "12dp"
    md_bg_color: app.theme_cls.primary_color

<BaseDialog>:
    on_dismiss: d.delete_dialog()

<BaseContent>:
	size_hint: (0.9, None)
	orientation: "vertical"
	padding: "10dp"

# detalhes do filme
<MovieDetailContent>:
	height: "250dp"

	MDSeparator:
		height: "1dp"
		size_hint_y: None

	MDLabel:
		id: ano
		text: root.year
		font_size: "20dp"
		size_hint_y: .5

	BoxLayout:
		orientation: "horizontal"

		MDIcon:
			id: prioridade
			icon: f"numeric-{root.priority}-circle"
			font_size: "25dp"
			pos_hint: {"center_y": 0.5}
			size_hint_x: 0.2

		MDLabel:
			id: titulo
			text: root.title
			font_size: "25dp"

	MDLabel:
		id: categorias
		text: root.genres
		text_color: app.theme_cls.secondary_text_color
        size_hint_y: .5

