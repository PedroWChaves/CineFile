# adicionar filme
<AddMovieContent>:
	height: "300dp"

	MDTextField:
		id: titulo
		hint_text: "Título:"
		text: root.title

	MDTextField:
		id: categoria1
		hint_text: "ID no IMDB:"
		text: root.imdbId

	MDTextField:
		id: ano
		hint_text: "Ano:"
		text: root.year

	MDTextField:
		id: categoria2
		hint_text: "Categorias:"
		helper_text: 'separe com ","'
		text: root.genres

	MDTextField:
		id: prioridade
		hint_text: "Prioridade:"
		text: root.priority


<Check>:
	orientation: "horizontal"

	MDLabel:
		text: root.text
		pos_hint: {'center_x': 0.3, 'center_y': 0.5}

	MDCheckbox:
	    group: root.group
		pos_hint: {'center_y': 0.5, "right": 0.9}
	    size_hint: None, None
	    size: dp(40), dp(40)
	    selected_color: (app.theme_cls.accent_light if app.theme_cls.theme_style == "Dark" else app.theme_cls.primary_light)

<OrderItem>:
	orientation: "horizontal"

	MDIconButton:
		icon: root.lefticon
		theme_text_color: "Custom"
		text_color: app.theme_cls.primary_color
		on_release: root.update_order()

	MDLabel:
		text: root.text

	MDIconButton:
		id: sort
		icon: root.righticon
		theme_text_color: "Custom"
		text_color: app.theme_cls.secondary_text_color
		on_release: root.update_sort()


# ordenar lista
<ListOrderContent>:
	height: "320dp"

	MDSeparator:
		height: "1dp"
		size_hint_y: None

	OrderItem:
		text: "Lançamento"
		righticon: "sort-numeric-descending"

	OrderItem:
		text: "Título"
		righticon: "sort-alphabetical-ascending"

	OrderItem:
		text: "Categoria 1"
		righticon: "sort-alphabetical-ascending"

	OrderItem:
		text: "Categoria 2"
		righticon: "sort-alphabetical-ascending"

	OrderItem:
		text: "Prioridade"
		righticon: "sort-numeric-descending"

	OrderItem:
		text: "Adicionado"
		righticon: "sort-numeric-ascending"

	OrderItem:
		text: "Aleatório"
		righticon: "sort-ascending"

	MDSeparator:
		height: "1dp"
		size_hint_y: None


